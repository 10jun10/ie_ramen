<ul>
  <% @noodles.each do |noodle| %>
    <li class="noodle_list">
      <div class="row">
        <div class="col-md-4 noodle_images">
          <% if noodle.image? %>
            <%= image_tag(noodle.image.to_s, size: '200x200') %>
          <% else %>
            <%= image_tag 'default.png', size: '200x200' %>
          <% end %>
          <% @noodle = noodle %>
          <%= render 'users/favorite_form'%>
        </div>
        <div class="col-md-7 offset-md-1">
          <p><%= link_to noodle.name, "#{noodle_path(noodle)}" %><span><%= noodle.maker %></span><p>
          <p><%= noodle.taste %></p>
          <p class="noodle_user_info"><small>投稿日:<%= noodle.created_at.strftime("%Y-%m-%d/%H:%M") %> 投稿者:<%= link_to noodle.user.name, user_path(noodle.user) %>さん</small></p>
        </div>
      </div>
    </li>
  <% end %>
</ul>
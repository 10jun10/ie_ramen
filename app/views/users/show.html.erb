<% provide(:title, "#{@user.name}のプロフィール") %>
<div class="row justify-content-center">
  <div class="col-md-9 user_prof">
    <div class="user-img-box">
      <%= gravatar_for @user, size: 120, cl: "gravatar" %>
    </div>
    <h3><%= @user.name %></h3>
    <% if current_user == @user %>
      <div class="user-edit"><%= link_to "編集", edit_user_path(@user) %>
    <% end %>
    <hr>
    <div class="text-left">
      <p><%= @user.introduction %></p>
    </div>
    <hr>
    <div class="text-left">
      <h5><%= @user.name %>の投稿ラーメン</h5>
    </div>
  </div>
</div>
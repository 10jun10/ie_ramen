<% provide(:title, "#{@user.name}のプロフィール") %>
<div class="row user_prof">
  <div class="col-md-10 offset-md-1">
    <div class="user-img-box">
      <%= gravatar_for @user, size: 120, cl: "gravatar" %>
    </div>
    <h3><%= @user.name %></h3>
    <% if current_user == @user %>
      <div class="user-edit"><%= link_to "編集", edit_user_path(@user) %> | <%= link_to "アカウント削除", user_path(@user), method: :delete,
                                  data: { confirm: "本当にアカウントを削除しますか？" } %></div>
    <% end %>
    <hr>
    <div class="text-left">
      <p><%= @user.introduction %></p>
    </div>
    <hr>
    <div class="text-left">
      <% if current_user == @user %>
        <h5>あなたの食べた家ラーメン(<%= @user.noodles.count %>)</h5>
      <% else %>
        <h5><%= @user.name %>さんの食べた家ラーメン(<%= @user.noodles.count %>)</h5>
      <% end %>
    </div>
    <div class="user_noodles">
      <%= render "noodles/noodles" %>
    </div>
  </div>
</div>
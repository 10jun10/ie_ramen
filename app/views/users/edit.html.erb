<% provide(:title, "プロフィール編集") %>
<div class="row justify-content-center">
  <div class="col-md-10 edit_form">
    <h2>プロフィール</h2>
    <hr>
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="gravatar">
        <%= gravatar_for(@user, size: 40) %>
        <p><%= @user.name %><p>
        <a href="http://gravatar.com/emails" target="_blank">アイコン画像を変更</a>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control", placeholder: "好きなラーメンの種類や食べ方などを記載しましょう",rows: 10 %>
      </div>
      <%= f.submit "更新する", class: 'btn btn-block' %>
    <% end %>
  </div>
</div>
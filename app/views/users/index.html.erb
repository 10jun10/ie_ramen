<% provide(:title, 'ユーザー一覧') %>
<div class="container">
  <h1>ユーザー一覧</h1>
  <% if @users.any? %>
    <%= paginate @users %>
    <ul>
      <% @users.each do |user| %>
        <li>
          <%= gravatar_for user, size: 100 %>
          <%= link_to user.name, user %>
          <%= link_to "削除", user_path(user), method: :delete,
                                data: { confirm: "本当に削除しますか？" } %>
        </li>
        <hr>
      <% end %>
    </ul>
    <%= paginate @users %>
  <% end %>
</div>
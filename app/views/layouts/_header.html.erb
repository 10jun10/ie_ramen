<header>
  <nav class="navbar navbar-expand-md navbar-dark">
    <a class="navbar-brand" href="/"><i class="fas fa-utensils"></i> 家ラーメン</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item"><a href="/about" >家ラーメンとは</a></li>
        <% if logged_in? %>
          <li class="nav-item"><%= link_to 'いいねリスト', favorites_path %></li>

          <% if unchecked_notifications.any? %>
            <li class="nav-item on_notification">
          <% else %>
            <li class="nav-item no_notification">
          <% end %>
          <%= link_to '通知', notifications_path %></li>

          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            アカウント</a>
          <ul class="dropdown-menu">
            <li><%= link_to 'プロフィール', current_user %></li>
            <li class="divider"></li>
            <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
          </ul>
        </li>
        <% else %>
          <li class="nav-item"><a href="/signup" >アカウント作成</a></li>
          <li class="nav-item"><a href="/login" >ログイン</a></li>
        <% end %>
      </ul>
    </div>
  </nav>
  <div class="container">
    <%= render "layouts/search" %>
  </div>
</header>
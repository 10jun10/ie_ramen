<header class="site-header">
  <%# <div class="navigation"> %>
    <div class="container">
      <nav class="navbar navbar-expand-md navbar-light">
        <a class="navbar-brand" href="/"> 家ラーメン</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
          <ul class="navbar-nav">
            <li><%= render "layouts/search" %></li>
            <% if logged_in? %>
              <li class="nav-item">
                <%= link_to favorites_path do %>
                  <i class="fas fa-heart"></i>いいね
                <% end %>
              </li>

              <% if unchecked_notifications.any? %>
                <li class="nav-item on_notification">
              <% else %>
                <li class="nav-item no_notification">
              <% end %>
              <%= link_to notifications_path do %>
                <i class="fas fa-bell"></i>通知
              <% end %>
              </li>
              
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fas fa-cog"></i>アカウント</a>
                <ul class="dropdown-menu">
                  <li class="nav-item"><a href="/about" >家ラーメンとは</a></li>
                  <li><%= link_to 'プロフィール', current_user %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
                </ul>
              </li>
              
            <% else %>
              <li class="nav-item"><a href="/about" >家ラーメンとは</a></li>
              <li class="nav-item"><a href="/signup" >アカウント作成</a></li>
              <li class="nav-item"><a href="/login" >ログイン</a></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
  <%# </div> %>
  <div class="header_bg"></div>
</header>